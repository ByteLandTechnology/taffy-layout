{
  "name": "taffy-js",
  "version": "0.2.0",
  "description": "WebAssembly bindings for Taffy layout library",
  "keywords": [
    "layout",
    "flexbox",
    "css-grid",
    "grid",
    "ui",
    "wasm",
    "webassembly"
  ],
  "homepage": "https://github.com/ByteLandTechnology/taffy-js#readme",
  "bugs": {
    "url": "https://github.com/ByteLandTechnology/taffy-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ByteLandTechnology/taffy-js.git"
  },
  "license": "MIT",
  "author": "ByteLandTechnology <github@byteland.app>",
  "type": "module",
  "main": "pkg/taffy_js.js",
  "types": "pkg/taffy_js.d.ts",
  "files": [
    "pkg"
  ],
  "scripts": {
    "build": "wasm-pack build --release --target web && npx tsx scripts/patch-dts.ts && npm run docs",
    "build:dev": "wasm-pack build --dev --target web && npx tsx scripts/patch-dts.ts",
    "docs": "typedoc",
    "test": "wasm-pack test --node",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.0.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "wasm-pack": "^0.13.1"
  },
  "engines": {
    "node": ">=12"
  },
  "overrides": {
    "axios": "^1.7.9"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,yaml,yml}": "prettier --write"
  }
}
